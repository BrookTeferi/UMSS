@using UMSS.Models
@using Microsoft.AspNetCore.Identity
@model List<UMSS.Models.UserRolesViewModel>
@inject UserManager<UMSS.Areas.Identity.Data.UMSSUser> UserManager
@{
    ViewData["Title"] = "UserList";
}

<h1>UserList</h1>

<table class="table table-striped card-columns">
    <thead>
        <tr>
            <th>
                Profile Picture
            </th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>EMployeeId</th>
            <th>Phone Number</th>
            <th>Delete User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>

                    <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(user.ProfilePicture))">
                </td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.EmployeeID</td>
                <td>@user.PhoneNumber</td>
             
            </tr>
        }
    </tbody>
</table>

